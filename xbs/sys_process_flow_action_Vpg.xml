<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGsys_process_flow_action"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_sys_process_flow_action" Size="30,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>sys_process_flow_action_id</Index>
<DbTable>xbs.sys_process_flow_action s left join xbs.xerp_role x on s.role_code=x.role_id left join xbs.user_v u on s.userid=u.xerp_user_id left join xbs.user_v u0 on s.created_by=u0.xerp_user_id left join xbs.user_v u1 on s.last_update_by=u1.xerp_user_id</DbTable>
<Data>count(*) records</Data>
<Order>sys_process_flow_action_id</Order><Queryformat>select %{data} from (select s.sys_process_flow_action_id from %{dbtable} %{where} GROUP BY s.sys_process_flow_action_id  ORDER BY s.sys_process_flow_action_id) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_sys_process_flow_action" expr="js(Math.ceil(%{records_sys_process_flow_action}/%{sys_process_flow_action_vLst[countsperpage]}))"/>
<assign name="pgscb_sys_process_flow_action" expr="js('1~'+Math.ceil(%{records_sys_process_flow_action}/%{sys_process_flow_action_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>
